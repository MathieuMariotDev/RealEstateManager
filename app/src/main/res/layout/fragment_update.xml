<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.update.UpdateFragment"
    android:fillViewport="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="?android:attr/actionBarSize">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_type"
                style="@style/TextInputLayout"
                app:errorEnabled="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:hint="Type Real Estate"
                app:startIconDrawable="@drawable/ic_baseline_home_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_adresse"
                style="@style/TextInputLayout"
                app:errorEnabled="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:hint="Adresse"
                app:startIconDrawable="@drawable/ic_baseline_add_location_24">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView3">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_nbRooms"
                style="@style/TextInputLayout"
                app:errorEnabled="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:hint="Number of rooms"
                app:startIconDrawable="@drawable/ic_baseline_room_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_surface"
                style="@style/TextInputLayout"
                app:errorEnabled="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:hint="Surface"
                app:startIconDrawable="@drawable/ic_baseline_aspect_ratio_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_nbBedrooms"
                style="@style/TextInputLayout"
                app:errorEnabled="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:hint="Number of bedrooms"
                app:startIconDrawable="@drawable/ic_baseline_bed_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_nbBathrooms"
                style="@style/TextInputLayout"
                app:errorEnabled="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:hint="Number of bathrooms"
                app:startIconDrawable="@drawable/ic_baseline_bath_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField_description"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:hint="Edit text Description"
            app:layout_constraintBottom_toTopOf="@+id/materialCardView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"
            app:startIconDrawable="@drawable/ic_baseline_description_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textField_description">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:text="Add a picture"
                android:textAppearance="?attr/textAppearanceHeadline6"></TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_add_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|right"
                android:background="@color/colorPrimary"
                android:drawableBottom="@drawable/ic_baseline_photo_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_add_photo_from_folder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|right|bottom"
                android:background="@color/colorPrimary"
                android:drawableBottom="@drawable/ic_baseline_folder_upload_24" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_photo_update"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_gravity="bottom|left"
                android:orientation="horizontal"
                tools:listitem="@layout/item_update_photo" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField_price"
            style="@style/TextInputLayout"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:hint="Edit text type"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Button_date_picker"
            app:startIconDrawable="@drawable/ic_baseline_money_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="687dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_update"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:drawableBottom="@drawable/ic_baseline_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Button_date_picker" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_date_picker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_baseline_calendar_24"
            android:layout_margin="8dp"
            android:text="Select date of sale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>